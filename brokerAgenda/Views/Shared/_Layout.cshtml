<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - brokerAgenda</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
      <div class="container">
        <a class="navbar-brand m-0" asp-area="" asp-controller="Home" asp-action="Index">brokerAgenda</a>
        <div class="navbar-collapse collapse">
          <ul class="navbar-nav d-sm-inline-flex justify-content-center flex-grow-1">
            <li class="mr-2 shadow-sm">
              <a class="btn btn-light border-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="btn-group mr-2 shadow-sm">
              <a class="btn btn-light border-secondary" asp-area="" asp-controller="Broker" asp-action="Index">Courtiers</a>
              <a class="btn btn-light border-secondary" asp-area="" asp-controller="Broker" asp-action="Create">Ajouter</a>
            </li>
            <li class="btn-group mr-2 shadow-sm">
              <a class="btn btn-light border-secondary" asp-area="" asp-controller="Customer" asp-action="Index">Clients</a>
              <a class="btn btn-light border-secondary" asp-area="" asp-controller="Customer" asp-action="Create">Ajouter</a>
            </li>
            <li class="btn-group mr-2 shadow-sm">
              <a class="btn btn-light border-secondary" asp-area="" asp-controller="Appointment" asp-action="Index">Rendez-vous</a>
              <a class="btn btn-light border-secondary" asp-area="" asp-controller="Appointment" asp-action="Create">Ajouter</a>
            </li>
          </ul>
        </div>
        <h5 class="m-0">@DateTime.Now.ToString("dd/MM/yyyy")</h5>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>
  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>


  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="alert alert-success mb-0" role="alert">
          This is a success alert—check it out!
        </div>
      </div>
    </div>
  </div>
  <footer class="border-top footer bg-light text-muted">
    <div class="container">
      &copy; 2021 - brokerAgenda - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model Broker
@{ ViewData["Title"] = "Ajouter entrée courtier"; }

<form method="post" asp-action="Create">
  <div class="border p-3">
    @*validation message for all entries. not used here*@
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="form-group row">
      <h2 class="text-black-50 pl-3">Ajouter une entrée courtier</h2>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="form-group row">
          <div class="col-3">
            <label asp-for="Lastname"></label>
          </div>
          <div class="col-3">
            <label asp-for="Firstname"></label>
          </div>
          <div class="col-3">
            <label asp-for="Mail"></label>
          </div>
          <div class="col-3">
            <label asp-for="PhoneNumber"></label>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-3">
            <input asp-for="Lastname" class="form-control" />
            <span asp-validation-for="Lastname" class="text-danger"></span>
          </div>
          <div class="col-3">
            <input asp-for="Firstname" class="form-control" />
            <span asp-validation-for="Firstname" class="text-danger"></span>
          </div>
          <div class="col-3">
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
          </div>
          <div class="col-3">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-8 d-flex justify-content-between mx-auto mt-4">
            <input type="submit" class="btn btn-info col-4" value="Ajouter" />
            <a asp-action="Index" class="btn btn-success col-4">Retour</a>
          </div>
        </div>

      </div>
    </div>
  </div>
</form>

@section Scripts{
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}

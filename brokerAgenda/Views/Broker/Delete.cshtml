@model Broker
@{
  ViewData["Title"] = "Supprimer entrée courtier";
}

<form method="post" asp-action="DeletePost">
  <input asp-for="Id" hidden />
  <div class="border p-3">
    <div class="form-group row">
      <h2 class="text-primary font-weight-normal pl-3">Supprimer une entrée courtier</h2>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="form-group row">
          <div class="col-3">
            <label asp-for="Lastname"></label>
          </div>
          <div class="col-3">
            <label asp-for="Firstname"></label>
          </div>
          <div class="col-3">
            <label asp-for="Mail"></label>
          </div>
          <div class="col-3">
            <label asp-for="PhoneNumber"></label>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-3">
            <input asp-for="Lastname" disabled class="form-control" />
          </div>
          <div class="col-3">
            <input asp-for="Firstname" disabled class="form-control" />
          </div>
          <div class="col-3">
            <input asp-for="Mail" disabled class="form-control" />
          </div>
          <div class="col-3">
            <input asp-for="PhoneNumber" disabled class="form-control" />
          </div>
        </div>
        <div class="form-group row">
          @if (!ViewBag.isAppointment)
          {
          <div class="col-8 d-flex justify-content-between mx-auto mt-4">
            <input type="submit" class="btn btn-danger col-4" value="Supprimer" />
            <a asp-action="Index" class="btn btn-success col-4">Retour</a>
          </div>
          }
          else
          {
            <h5 class="text-center text-danger m-4">Ce courtier a un ou plusieurs rendez-vous qui lui sont associés. Veuillez supprimer les RDV avant de pouvoir supprimer l'entrée courtier.</h5>
            <a asp-action="Index" class="btn btn-success col-4 mx-auto mt-4">Retour</a>
          }
        </div>
      </div>
    </div>
  </div>
</form>

@section Scripts{
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}

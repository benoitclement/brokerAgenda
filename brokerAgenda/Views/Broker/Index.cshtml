@model IEnumerable<Broker>

@{
    ViewData["Title"] = "liste des courtiers";
}
  
<div class="container p-3">
  <div class="d-flex justify-content-between mb-3">
    <h2 class="text-primary">Liste des courtiers</h2>
    <a class="btn btn-primary col-3" asp-area="" asp-controller="Broker" asp-action="Create">Ajouter un nouveau courtier</a>
  </div>
  @if (Model.Count() > 0)
  {
    <table class="table table-bordered table-striped" style="width:100%">
      <thead>
        <tr>
          <th>Id</th>
          <th>Nom de famille</th>
          <th>Prénom</th>
          <th>Modifications</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var broker in Model)
        {
          <tr class="@(broker.Id == Convert.ToInt32(TempData["ModifiedId"]) ? "modified-entry" : "")">
            <td width="20%">@broker.Id</td>
            <td width="20%">@broker.Lastname</td>
            <td width="20%">@broker.Firstname</td>
            <td width="40%">
              <div class="col-6 d-inline-flex align-content-between w-100">
                <a asp-controller="Broker" asp-action="Details" asp-route-Id="@broker.Id" class="btn btn-info d-inline-flex mx-1"><img style="width: 20px" class="mr-1" src="~/images/info-circle-solid.svg" alt="update icon" title="update icon" />Profil</a>
                <a asp-controller="Broker" asp-action="Update" asp-route-Id="@broker.Id" class="btn btn-primary d-inline-flex mx-1"><img style="width: 20px" class="mr-1" src="~/images/edit-solid.svg" alt="update icon" title="update icon" />Modifier</a>
                <a asp-controller="Broker" asp-action="Delete" asp-route-Id="@broker.Id" class="btn btn-danger d-inline-flex mx-1"><img style="width: 20px" class="mr-1" src="~/images/trash-solid.svg" alt="delete icon" title="delete icon" />Supprimer</a>
              </div>
            </td>
          </tr>
        }
      </tbody>
    </table>
  }
</div>

@model Appointment
@{ ViewData["Title"] = "Supprimer rendez-vous"; }

<form method="post" asp-action="DeletePost">
  <input asp-for="Id" hidden />
  <div class="border p-3">
    @*validation message for all entries. not used here*@
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="form-group row">
      <h2 class="text-black-50 pl-3">Supprimer un rendez-vous</h2>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="form-group row">
          <div class="col-3">
            <label>Nom du courtier</label>
          </div>
          <div class="col-3">
            <label>Nom du client</label>
          </div>
          <div class="col-3">
            <label asp-for="DateHour"></label>
          </div>
          <div class="col-3">
            <label asp-for="Subject"></label>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-3">
            <input class="form-control" disabled value="@Model.IdBrokerNavigation.Firstname @Model.IdBrokerNavigation.Lastname"/>
          </div>
          <div class="col-3">
            <input class="form-control" disabled value="@Model.IdCustomerNavigation.Firstname @Model.IdCustomerNavigation.Lastname"/>
          </div>
          <div class="col-3">
            <input type="text" asp-for="DateHour" value="@Model.DateHour" class="form-control" disabled />
          </div>
          <div class="col-3">
            <input asp-for="Subject" class="form-control" disabled />
          </div>
        </div>
        <div class="form-group row">
          <div class="col-8 d-flex justify-content-between mx-auto mt-4">
            <input type="submit" class="btn btn-danger col-4" value="Supprimer" />
            <a asp-action="Index" class="btn btn-success col-4">Retour</a>
          </div>
        </div>

      </div>
    </div>
  </div>
</form>

@section Scripts{
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}

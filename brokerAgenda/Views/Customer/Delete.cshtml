@model Customer
@{
    ViewData["Title"] = "Supprimer entrée client";
}

<form method="post" asp-action="DeletePost">
  <input asp-for="Id" hidden />
  <div class="border p-3">
    @*validation message for all entries. not used here*@
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="form-group row">
      <h2 class="text-primary font-weight-normal pl-3">Supprimer une entrée client</h2>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="form-group row">
          <div class="col-sm-6 col-lg-3 col-md- mb-3">
            <label asp-for="Lastname"></label>
            <input asp-for="Lastname" disabled class="form-control" />
          </div>
          <div class="col-sm-6 col-lg-3 mb-3">
            <label asp-for="Firstname"></label>
            <input asp-for="Firstname" disabled class="form-control" />
          </div>
          <div class="col-sm-6 col-lg-3 mb-3">
            <label asp-for="Mail"></label>
            <input asp-for="Mail" disabled class="form-control" />
          </div>
          <div class="col-sm-6 col-lg-3 mb-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" disabled class="form-control" />
          </div>
          <div class="col-sm-6 col-lg-3 mb-3">
            <label asp-for="Budget">Budget</label>
            <input asp-for="Budget" disabled class="form-control" />
          </div>
        </div>
        <div class="form-group row">
          @if (!ViewBag.isAppointment)
          {
          <div class="col-8 d-flex justify-content-between mx-auto mt-4">
            <input type="submit" class="btn btn-danger col-4" value="Supprimer" />
            <a asp-action="Index" class="btn btn-success col-4">Retour</a>
          </div>
          }
          else
          {
            <h5 class="text-center text-danger m-4">Ce client a un ou plusieurs rendez-vous qui lui sont associés. Veuillez supprimer les RDV avant de pouvoir supprimer l'entrée client.</h5>
            <a asp-action="Index" class="btn btn-success col-4 mx-auto mt-4">Retour</a>
          }
        </div>
      </div>
    </div>
  </div>
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}
